    typedef std::pair<std::vector<CKhuDAOVote>, int64_t> OrphanVotesAndLastReceived;
    std::map<uint256, OrphanVotesAndLastReceived> mapOrphanVotes;  // guarded by cs_votes

    // Collateral tracking (reorg safety)
    std::map<uint256, uint256> mapFeeTxToProposal;          // guarded by cs_proposals

public:
    // Locks (ORDRE CRITIQUE)
    mutable RecursiveMutex cs_proposals;
    mutable RecursiveMutex cs_votes;

    CKhuDAOManager() {}

    // Proposal management
    bool HaveProposal(const uint256& propHash) const {
        LOCK(cs_proposals);
        return mapProposals.count(propHash);
    }

    bool AddProposal(CKhuDAOProposal& proposal);
    CKhuDAOProposal* FindProposal(const uint256& nHash);
    bool GetProposal(const uint256& nHash, CKhuDAOProposal& prop) const;

    std::vector<CKhuDAOProposal*> GetAllProposalsOrdered();  // Tri par votes (highest first)

    // Vote management
    bool HaveSeenVote(const uint256& voteHash) const {
        LOCK(cs_votes);
        return mapSeenVotes.count(voteHash);
    }

    bool AddAndRelayVote(const CKhuDAOVote& vote, std::string& strError);
    bool UpdateProposal(const CKhuDAOVote& vote, CNode* pfrom, std::string& strError);
    void AddSeenVote(const CKhuDAOVote& vote);

    // Get winning proposal for a cycle
    bool GetWinningProposal(uint32_t dao_cycle, CScript& payeeRet, CAmount& nAmountRet) const;

    // DAO budget calculation
    CAmount CalculateDAOBudget(const KhuGlobalState& state) const {
        // (U + Ur) √ó 0.5%
        __int128 total = ((__int128)state.U + state.Ur);
        __int128 budget = (total * 5) / 1000;
        return (CAmount)budget;
    }

    bool ShouldCreateDAOBudget(const KhuGlobalState& state, uint32_t nHeight) const {
        uint32_t cycle_position = nHeight - state.domc_cycle_start;
        return (cycle_position >= 172800);  // 4 mois
    }

    // Fill coinstake with DAO payment
    bool FillDAOBudgetPayment(CMutableTransaction& txCoinstake,
                             const KhuGlobalState& state,
                             int nHeight) const;

    // Consensus validation
    enum class TrxValidationStatus {
        InValid,         // TX invalide
        Valid,           // TX valide
        DoublePayment,   // Double paiement DAO
        VoteThreshold    // Pas assez votes MN
    };

    TrxValidationStatus IsKhuDAOTransactionValid(const CTransaction& txNew,
                                                 const uint256& nBlockHash,
                                                 int nBlockHeight,
                                                 const KhuGlobalState& state) const;

    // P2P sync
    bool ProcessMessage(CNode* pfrom, std::string& strCommand, CDataStream& vRecv, int& banScore);
    void Sync(CNode* node, bool fPartial);

    // Cleanup
    void RemoveStaleVotesOnProposal(CKhuDAOProposal* prop);
    void CheckAndRemoveExpired(int nCurrentHeight);
};

