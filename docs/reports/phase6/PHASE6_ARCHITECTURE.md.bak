// khu_dao_manager.cpp

bool CKhuDAOManager::FillDAOBudgetPayment(
    CMutableTransaction& txCoinstake,
    const KhuGlobalState& state,
    int nHeight
) const {
    if (!ShouldCreateDAOBudget(state, nHeight)) {
        return false;  // Pas un bloc budget
    }

    // Calculer budget
    CAmount dao_budget = CalculateDAOBudget(state);

    if (dao_budget <= 0) {
        return false;
    }

    // R√©cup√©rer cycle actuel
    uint32_t dao_cycle = nHeight / 172800;

    // R√©cup√©rer proposition gagnante (highest votes)
    CScript payee;
    CAmount amount;

    if (GetWinningProposal(dao_cycle, payee, amount)) {
        // ‚úÖ ACCEPT√â: Payer la proposition
        txCoinstake.vout.emplace_back(dao_budget, payee);
        LogPrint(BCLog::KHU, "DAO Budget: Paying %lld PIV to winning proposal (cycle %u)\n",
                 dao_budget, dao_cycle);
    } else {
        // ‚ùå REJET√â: Br√ªler le budget
        CScript burnScript;
        burnScript << OP_RETURN;
        txCoinstake.vout.emplace_back(dao_budget, burnScript);
        LogPrint(BCLog::KHU, "DAO Budget: Burning %lld PIV (no winning proposal, cycle %u)\n",
                 dao_budget, dao_cycle);
    }

    return true;
}

bool CKhuDAOManager::GetWinningProposal(
    uint32_t dao_cycle,
    CScript& payeeRet,
    CAmount& nAmountRet
) const {
    LOCK(cs_proposals);

    // Filtrer propositions pour ce cycle
    std::vector<CKhuDAOProposal*> cycleProposals;

    for (auto& [hash, prop] : mapProposals) {
        if (prop.GetCycle() == dao_cycle && prop.IsValid()) {
            cycleProposals.push_back(const_cast<CKhuDAOProposal*>(&prop));
        }
    }

    if (cycleProposals.empty()) {
        return false;  // Aucune proposition valide
    }

    // Trier par votes (highest YES - NO)
    std::sort(cycleProposals.begin(), cycleProposals.end(),
              CKhuDAOProposal::PtrHigherYes);

    // R√©cup√©rer gagnant (premier dans liste tri√©e)
    CKhuDAOProposal* winner = cycleProposals[0];

    // V√©rifier quorum (ex: 10% MN minimum)
    int mnCount = mnodeman.CountEnabled();
    if (!winner->IsPassing(mnCount)) {
        return false;  // Pas assez votes
    }

    payeeRet = winner->GetPayee();
    nAmountRet = winner->GetAmount();

    return true;
}
