/**
 * KHU DAO PROPOSAL ‚Äî Phase 6
 *
 * Proposition budget DAO pour un cycle (172800 blocs).
 *
 * ADAPTATION PIVX budgetproposal.h:
 * - ‚úÖ Garde: name, URL, address, amount, votes, collateral
 * - ‚ùå Supprime: nBlockStart/End (paiement ponctuel)
 * - üîÑ Ajoute: dao_cycle (num√©ro cycle)
 */

// Constants
static const CAmount KHU_DAO_PROPOSAL_FEE = (10 * COIN);  // Collateral (vs 50 PIV PIVX)
static const size_t DAO_PROP_NAME_MAX_SIZE = 20;
static const size_t DAO_PROP_URL_MAX_SIZE = 64;
static const CAmount DAO_PROP_MIN_AMOUNT = 10 * COIN;

class CKhuDAOProposal
{
private:
    bool fValid;
    std::string strInvalid;
    std::map<COutPoint, CKhuDAOVote> mapVotes;

protected:
    std::string strProposalName;  // Max 20 chars
    std::string strURL;           // Max 64 chars
    CScript address;              // B√©n√©ficiaire (payee)
    CAmount nAmount;              // Montant demand√©
    uint256 nFeeTXHash;           // Collateral TX (10 PIV)
    uint32_t dao_cycle;           // Num√©ro cycle (height / 172800)

public:
    int64_t nTime;                // Timestamp cr√©ation

    CKhuDAOProposal();
    CKhuDAOProposal(const std::string& name, const std::string& url,
                    const CScript& payee, const CAmount& amount,
                    uint32_t cycle, const uint256& nfeetxhash);

    // Vote management
    bool AddOrUpdateVote(const CKhuDAOVote& vote, std::string& strError);
    void SetSynced(bool synced);
    UniValue GetVotesArray() const;

    // Vote counts
    int GetYeas() const;
    int GetNays() const;
    int GetAbstains() const;
    double GetRatio() const { return (GetYeas() - GetNays()) / (double)(GetYeas() + GetNays() + 1); }

    // Validation
    bool UpdateValid(int nHeight, int mnCount);
    bool IsValid() const { return fValid; }
    std::string IsInvalidReason() const { return strInvalid; }

    bool IsPassing(int mnCount) const;
    bool IsExpired(int nCurrentHeight) const;

    // Getters
    std::string GetName() const { return strProposalName; }
    std::string GetURL() const { return strURL; }
    CScript GetPayee() const { return address; }
    CAmount GetAmount() const { return nAmount; }
    uint32_t GetCycle() const { return dao_cycle; }
    const uint256& GetFeeTXHash() const { return nFeeTXHash; }
    std::map<COutPoint, CKhuDAOVote> GetVotes() const { return mapVotes; }

    uint256 GetHash() const {
        CHashWriter ss(SER_GETHASH, PROTOCOL_VERSION);
        ss << strProposalName << strURL << dao_cycle << nAmount
           << std::vector<unsigned char>(address.begin(), address.end());
        return ss.GetHash();
    }

    // Serialization
    SERIALIZE_METHODS(CKhuDAOProposal, obj) {
        READWRITE(LIMITED_STRING(obj.strProposalName, DAO_PROP_NAME_MAX_SIZE));
        READWRITE(LIMITED_STRING(obj.strURL, DAO_PROP_URL_MAX_SIZE));
        READWRITE(obj.address);
        READWRITE(obj.nAmount);
        READWRITE(obj.nFeeTXHash);
        READWRITE(obj.dao_cycle);
        READWRITE(obj.nTime);
        READWRITE(obj.mapVotes);
    }

    // Compare by net YES count
    static inline bool PtrHigherYes(CKhuDAOProposal* a, CKhuDAOProposal* b) {
        const int netYes_a = a->GetYeas() - a->GetNays();
        const int netYes_b = b->GetYeas() - b->GetNays();
        if (netYes_a == netYes_b)
            return UintToArith256(a->GetFeeTXHash()) > UintToArith256(b->GetFeeTXHash());
        return netYes_a > netYes_b;
    }
};

#endif // PIVX_KHU_DAO_PROPOSAL_H
